	<properties>
		<name>Feature: Walk This Way</name>
		<version>~dev_version~</version>
		<loadorder>400</loadorder>
		<author>Farratto</author>
		<description>Reminders for prone condition and movement.</description>

<!--
		<ruleset>
			<name>5E</name>
		</ruleset>
-->
