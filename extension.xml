	<base>
		<includefile source="strings/strings.xml" />

		<script name="CombatManagerWtW" file="scripts/manager_combat_wtw.lua" />

		<includefile source="campaign/query.xml" />

		<icon name="WtW_icon" file="graphics/icons/Shoe.png" />

		<script name="PowerUpWtW">
			function onInit()
				if PowerUp then
					PowerUp.registerExtension("Walk this Way", "~dev_version~", {
                        ['message'] = "~dev_version~\~update_notes~"
                    });
				end
			end
		</script>
	</base>

	<announcement text="Walk this Way ~dev_version~ by Farratto." icon="WtW_icon" font="emotefont" />

</root>